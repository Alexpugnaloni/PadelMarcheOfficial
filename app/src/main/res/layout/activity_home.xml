<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/agg_toolbar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/blu"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_menu"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="LetMeBeYourChef!">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/toolbar_button"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:id="@+id/toolbar_title"
                android:layout_width="312dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"

                android:gravity="center"
                android:scaleType="fitCenter"
                android:scaleX="3"
                android:scaleY="3"
                android:src="@drawable/padelmarchetitlebianco"
                android:text="PadelMarche"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="411dp"
        android:layout_height="68dp"
        app:backgroundTint="@color/blu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />

    <FrameLayout
        android:layout_width="409dp"
        android:layout_height="593dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="69dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="388dp"
            android:layout_height="254dp"
            android:background="@color/black"
            app:srcCompat="@drawable/prenotaunapartitabutton" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="188dp"
            android:layout_height="212dp"
            app:srcCompat="@drawable/img" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

