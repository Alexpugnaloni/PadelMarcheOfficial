<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".superadmin.PesarourbinoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbargenerale"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titolotoolbar"
        android:layout_width="241dp"
        android:layout_height="36dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="686dp"
        android:text="PadelMarche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/frecciatoolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="347dp"
        android:backgroundTint="@color/blu"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="409dp"
        android:layout_height="59dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:backgroundTint="@color/blu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textPesaroUrbino"
        android:layout_width="410dp"
        android:layout_height="69dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="1dp"
        android:text="Pesaro Urbino"
        android:textAlignment="center"
        android:textColor="@color/blu"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewCampo"
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPesaroUrbino"
        app:srcCompat="@drawable/campopadel1"
        tools:layout_editor_absoluteY="135dp" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomAppBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCampo">

        <TextView
            android:id="@+id/textEntrateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrate"
            android:textSize="25dp"
            android:textStyle="bold|italic"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/textentrategiornaliereTotView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrate Giornaliere Totali:"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/textentrateSettimanaliTotView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrate Settimanali Totali:"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/textentrateMensiliTotView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrate Mensili Totali:"
            android:textSize="20dp"
            android:textStyle="italic"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>