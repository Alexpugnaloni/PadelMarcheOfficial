<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfiloActivity3">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnSecondary"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:id="@+id/externalcardview"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="60dp"
                app:rippleColor="@color/LightRed"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp">

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/imgAccountcontainer"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    app:cardCornerRadius="60dp"
                    app:rippleColor="@color/LightRed"
                    app:strokeColor="@color/white"
                    app:strokeWidth="3dp">

                    <ImageView
                        android:id="@+id/imgAccount"
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        android:background="@color/black"
                        android:clickable="false"
                        android:contentDescription="@string/DescriptionFoto"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@drawable/ic_baseline_account_circle_24" />
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="@string/changePhoto"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnCancImg"
                style="@style/PersonalizedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:autofillHints="@string/nome"
                android:selectAllOnFocus="true"
                android:text="@string/eliminafoto" />

            <androidx.cardview.widget.CardView
                android:id="@+id/nameNonModificabile"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorOnPrimary"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingStart="15dp"
                        android:text="Nome"
                        android:textColor="@color/red"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="15dp"
                        android:text="@{account.nome.toString()}"
                        android:textSize="@dimen/Bigtextsize"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/DarkRed" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CardNameModificabile"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="?attr/colorOnPrimary"
                android:hint="@string/nome">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameModificabile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:selectAllOnFocus="true"
                    android:text="@{account.nome.toString()}" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/surnameNonModificabile"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorOnPrimary"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingStart="15dp"
                        android:text="@string/cognome"
                        android:textColor="@color/red"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="15dp"
                        android:text="@{account.cognome.toString()}"
                        android:textSize="@dimen/Bigtextsize"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/DarkRed" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CardSurnameModificabile"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="?attr/colorOnPrimary"
                android:hint="@string/cognome">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/surnameModificabile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:selectAllOnFocus="true"
                    android:text="@{account.cognome.toString()}" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorOnPrimary"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingStart="15dp"
                        android:text="@string/email"
                        android:textColor="@color/red"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="15dp"
                        android:text="@{account.email.toString()}"
                        android:textSize="@dimen/Bigtextsize"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/DarkRed" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

